package com.meadote.pets.comments;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpMethod;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.client.RestTemplate;

public class CommentService {
	
	
	
	@Autowired
    private RestTemplate restTemplate;

    public List<Comment> findAll(int id) {

    	List<Comment> custocomments = restTemplate.exchange(
                "http://comments/comments/search/findByPetId?petId={id}",
                HttpMethod.GET,
                null,
                new ParameterizedTypeReference<Customer>() {
                },
                id).getBody();

        return new MessageWrapper<>(customer, "server called using eureka with rest template");

    }
	

