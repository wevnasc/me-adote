package com.meadote.pets.comments;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

public class CommentController {

	
	@Autowired
	private CommentServiceClient commentServiceClient;
	
	@RequestMapping(value = "/pets/{id}/comments", method = RequestMethod.GET, produces = "application/json")
	 public MessageWrapper<List<Comment>> getCustomer(@PathVariable int id) {

        List<Comment> customer = customerServiceFeignClient.getCustomer(id);

        return new MessageWrapper<>(customer, "server called using eureka with feign");
    }
	
}
