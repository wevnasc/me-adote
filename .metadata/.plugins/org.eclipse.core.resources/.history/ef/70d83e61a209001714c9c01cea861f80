package com.meadote.pets;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.discovery.EnableDiscoveryClient;
import org.springframework.cloud.netflix.feign.EnableFeignClients;
import org.springframework.context.annotation.ComponentScan;

import com.meadote.pets.comments.CommentServiceClient;

@SpringBootApplication
@EnableDiscoveryClient
@EnableWebMvc
@EnableFeignClients(basePackageClasses = CommentServiceClient.class)
@ComponentScan(basePackageClasses = CommentServiceClient.class)
public class StartPetsApplication {

	public static void main(String[] args) {
		SpringApplication.run(StartPetsApplication.class, args);
	}
}
